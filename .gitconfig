[alias]
	st = status
	ck = checkout
	ci = commit
	ad = add
	br = branch
	di = diff
	pl = pull
	ps = push
    cl = clone
    lg = log --graph --oneline
    grp = grep -p
    shw = show --stat -p -U12
[user]
	name = Matthew Leeds
	email = mwleeds@protonmail.com
[core]
	editor = vim
    pager = "diff-so-fancy | less --tabs=4 -RFX"
[color]
    ui = true
[push]
	default = simple
[branch]
	autosetuprebase = always
	autosetupmerge = always
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[format]
    pretty = fuller
[log]
    decorate = auto
[grep]
    linenumber = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 227
	frag = magenta bold
	commit = 227 bold
	old = red bold
	new = green bold
	whitespace = red reverse
